<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nginx.utsmobpro.NavBarActivity"
    tools:showIn="@layout/app_bar_nav_bar">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:id="@+id/liga"
                android:src="@drawable/liga"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nama"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Nama                 : UEFA Champion League"
                android:paddingLeft="60px"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/juara"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Juara Saat ini   : FC Real Madrid"
                android:paddingLeft="60px"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sejak"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Didirikan           : 1955"
                android:paddingLeft="60px"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kantor"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Kantor Pusat    : Nyon, Swiss"
                android:paddingLeft="60px"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pialainternasional"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Piala International : Liga Champions"
                android:paddingLeft="60px"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
